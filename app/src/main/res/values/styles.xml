<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorPrimary">#4540e1</item>
        <item name="android:colorAccent">#5fdf38</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alertDialogStyle">@style/AppTheme.CustomDialog</item>

        <item name="android:dialogTheme">@style/AppTheme.CustomDialog</item>
        <item name="android:statusBarColor">#304DB7</item>
    </style>
    <style name="AppTheme.MyStyle">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="actionBarSize">56dp</item>
    </style>

    <style name="CustomProgressBar" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progressbar</item>
        <item name="android:progressBarStyleHorizontal">?android:attr/progressBarStyleHorizontal</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <style name="AppTheme.CustomDialog" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:textColorHint">#b1aeae</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:colorButtonNormal">#9e9d9d</item>
        <item name="searchViewStyle">@style/SearchView</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowMinWidthMinor">@dimen/window_min_width_minor</item>
        <item name="android:windowMinWidthMajor">@dimen/window_min_width_minor</item>

        <item name="toolbarStyle">@style/AppTheme.ToolbarStyle</item>

    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_black_24dp</item>
        <item name="submitBackground">@color/search_view_window_background</item>
        <item name="queryBackground">@color/search_view_window_background</item>
        <item name="android:background">@color/search_view_window_background</item>
    </style>
    <style name="AppTheme.ToolbarStyle">
        <item name="android:background">#7887ed</item>
        <item name="android:textViewStyle">@style/AppTheme.TextViewStyle</item>

    </style>

    <style name="AppTheme.TextViewStyle">
        <item name="android:textColor">#639848</item>
    </style>



</resources>
